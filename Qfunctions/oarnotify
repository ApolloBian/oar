#!/usr/bin/perl
# notify Almighty

use strict;
use warnings;
use Data::Dumper;
use oar_conflib qw(init_conf dump_conf get_conf is_conf);
use Getopt::Std;
use oarversion;
use oar_Tools;

init_conf("oar.conf");
my $remote_host = get_conf("SERVER_HOSTNAME");
my $remote_port = get_conf("SERVER_PORT");

my %opts;
Getopt::Std::getopts('v', \%opts);
if (defined($opts{v})){
    print("OAR version : ".oarversion::get_version()."\n");
    exit(0);
}


my $tag = "Term";
if (defined($ARGV[0])){
    $tag = $ARGV[0];
}
print("tag = $tag\n");

oar_Tools::notifyAlmighty($remote_host,$remote_port,"$tag");

exit 0;
