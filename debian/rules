#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

BUILDDIR=debian

configure: configure-stamp

configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	touch configure-stamp


#Architecture 
build: build-arch build-indep

build-arch: build-arch-stamp
build-arch-stamp: configure-stamp 
	# Add here commands to compile the arch part of the package.
	# Nothing to do has OAR written in perl and then interpreted
	touch build-arch-stamp

build-indep: build-indep-stamp
build-indep-stamp: configure-stamp 
	# Add here commands to compile the indep part of the package.
	# Nothing to do here
	touch build-indep-stamp

clean:
	dh_testdir
	dh_testroot
	# rm -f build-arch-stamp build-indep-stamp #CONFIGURE-STAMP#
	# Add here commands to clean up after the build process.
	rm -f build-arch-stamp build-indep-stamp configure-stamp
	dh_clean 

install: install-indep install-arch
install-indep:
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_installdirs -i
	# Add here commands to install the indep part of the package into
	# debian/<package>-doc.
	$(MAKE) doc-install \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-doc \
		PREFIX=/usr \
		DOCDIR=/usr/share/doc/oar-doc
	mkdir -p $(CURDIR)/$(BUILDDIR)/oar-common/var/lib/oar
	$(MAKE) sanity-check common configuration libs gridlibs \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-common \
		OARUSER=oar \
		OAROWNER=root \
		OARCONFDIR=/etc/oar \
		PREFIX=/usr \
		MANDIR=/usr/share/man \
		OARDIR=/usr/lib/oar \
		BINDIR=/usr/bin \
		SBINDIR=/usr/sbin
	perl -i -pe 's#^\#?OAR_RUNTIME_DIRECTORY=.*#OAR_RUNTIME_DIRECTORY="/var/lib/oar"#' $(CURDIR)/$(BUILDDIR)/oar-common/etc/oar/oar.conf
	perl -i -pe 's/^\#*OPENSSH_CMD=.*/OPENSSH_CMD="\/usr\/bin\/ssh -p 6667"/' $(CURDIR)/$(BUILDDIR)/oar-common/etc/oar/oar.conf
	mkdir -p $(CURDIR)/$(BUILDDIR)/oar-server/var/lib/oar
	$(MAKE) sanity-check server dbinit\
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-server \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin
	mkdir -p $(CURDIR)/$(BUILDDIR)/oar-node/var/lib/oar
	mkdir -p $(CURDIR)/$(BUILDDIR)/oar-node/etc/init.d
	$(MAKE) sanity-check node \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-node \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin
	mkdir -p $(CURDIR)/$(BUILDDIR)/oar-user/var/lib/oar
	$(MAKE) sanity-check user \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-user \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin
	$(MAKE) draw-gantt monika www-conf\
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-web-status \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin \
		PERLLIBDIR=/usr/share/perl5 \
		VARLIBDIR=/var/lib \
		WWWDIR=/usr/share/oar-web-status \
		CGIDIR=/usr/lib/cgi-bin
	mkdir -p $(CURDIR)/$(BUILDDIR)/oar-admin
	$(MAKE) sanity-check tools \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-admin \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin
	$(MAKE) desktop-computing-agent \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-desktop-computing-agent \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin 
	$(MAKE) desktop-computing-cgi \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-desktop-computing-cgi \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin \
		WWWDIR=/var/www \
		CGIDIR=/usr/lib/cgi-bin
	$(MAKE) api \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-api \
		DOCDIR=/usr/share/doc/oar-api \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin \
		WWWDIR=/var/www \
		CGIDIR=/usr/lib/cgi-bin
	$(MAKE) gridapi \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-gridapi \
		DOCDIR=/usr/share/doc/oar-gridapi \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin \
		WWWDIR=/var/www \
		CGIDIR=/usr/lib/cgi-bin
	$(MAKE) keyring-install \
		DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-keyring
	$(MAKE) sanity-check ocaml-scheduler-mysql hierarchy-extractor \
                DESTDIR=$(CURDIR)/$(BUILDDIR)/oar-scheduler-ocaml-mysql \
		OARUSER=oar \
		OAROWNER=root \
                OARCONFDIR=/etc/oar \
                PREFIX=/usr \
                MANDIR=/usr/share/man \
                OARDIR=/usr/lib/oar \
                BINDIR=/usr/bin \
                SBINDIR=/usr/sbin

	dh_install -i

install-arch:
	dh_testdir
	dh_testroot
	dh_clean -k -s 
	dh_installdirs -s
	# Add here commands to install the arch part of the package into 
	# debian/tmp.
	dh_install -s
# Must not depend on anything. This is to be called by
# binary-arch/binary-indep
# in another 'make' thread.
binary-common:
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_installmenu
	dh_installdebconf	
	dh_installlogrotate	
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_installinit -- start 90 2 3 4 5 . stop 01 0 1 6 .
	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress 
	dh_fixperms
	dh_perl
#	dh_python
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture independant packages using the common target.
binary-indep: build-indep install-indep
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

# Build architecture dependant packages using the common target.
binary-arch: build-arch install-arch
#	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

#binary: binary-arch binary-indep
binary: binary-indep
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch configure
