#set -x
#export DEBCONF_DEBUG=developer

. /usr/share/debconf/confmodule
db_version 2.0

adduser www-data oar || true

# TODO what does this do?
#perl -i -pe "s#^OARDIR=.*#OARDIR=/usr/lib/oar#;;s#^OARUSER=.*#OARUSER=oar#" /usr/lib/cgi-bin/oar-cgi

OARDO_USER=root
OARDO_GROUP=oar


# Manage setuid bits
chown $OARDO_USER:$OARDO_GROUP /usr/sbin/oarcache
chmod a+s /usr/sbin/oarcache
chown $OARDO_USER:$OARDO_GROUP /usr/lib/oar/oarres
chmod a+s /usr/lib/oar/oarres
chown $OARDO_USER:$OARDO_GROUP /usr/lib/cgi-bin/oar-cgi
chmod a+s /usr/lib/cgi-bin/oar-cgi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


