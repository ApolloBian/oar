#!/bin/bash
# $Id: oar-user.config,v 1.7 2004/08/24 16:10:34 neyron Exp $

set -e

#export DEBCONF_DEBUG=developer

. /usr/share/debconf/confmodule

db_version 2.0

db_input medium oar/db/hostname || true
db_input medium oar/db/basename || true
db_input medium oar/db/baselogin || true
db_input medium oar/db/basepasswd || true

db_input medium oar/server/hostname || true
db_input medium oar/server/port || true

db_input high oar/user/dosetup || true
db_go || true

db_get oar/user/dosetup || true
if [ "x$RET" = "xtrue" ]; then
	db_input high oar/user/listmethod || true
	db_go || true

	db_get oar/user/listmethod || true
	if [ "x$RET" = "xinline" ]; then 
		db_input high oar/user/listinline || true
	elif [ "x$RET" = "xfile" ]; then 
		db_input high oar/user/listfile || true
	fi
	db_go || true
fi
db_go || true
