#! /bin/sh
# postinst script for oar-common
#
# see: dh_installdeb(1)

set -e
# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

#set -x
#export DEBCONF_DEBUG=developer

. /usr/share/debconf/confmodule
db_version 2.0

setup_oar_user_group() {
    if ! getent group oar > /dev/null 2>&1 ; then
        addgroup --system --quiet oar > /dev/null 2>&1
    fi
    if ! getent passwd oar > /dev/null 2>&1 ; then
        adduser --quiet --system --home /var/lib/oar --ingroup oar --shell /bin/bash oar > /dev/null 2>&1
        passwd -u oar >/dev/null 2>&1
        cd /var/lib/oar
        echo '' >> .bash_profile
        echo 'export PATH="/usr/lib/oar/oardodo:$PATH"' >> .bash_profile
        chown oar:oar /var/lib/oar/.bash_profile
        ln -s -f .bash_profile .bashrc
        chown oar:oar .bashrc
    fi
    chown oar:oar /var/lib/oar -R > /dev/null 2>&1
    if [ -e /etc/oar/oar.conf ]; then
        chown oar:root /etc/oar/oar.conf > /dev/null 2>&1
        chmod 0600 /etc/oar/oar.conf > /dev/null 2>&1
    fi
}

setup_oar_user_group
touch /var/log/oar.log && chown oar:root /var/log/oar.log && chmod 0644 /var/log/oar.log || true

install -o oar -m 755 -d /var/run/oar

# Manage setuid bits
chown oar:oar /usr/lib/oar/oarsh_oardo
chmod 6755 /usr/lib/oar/oarsh_oardo
chown root:oar /usr/lib/oar/oardodo/oardodo
chmod 6750 /usr/lib/oar/oardodo/oardodo


# Manage setuid bits
chown oar:oar /usr/sbin/oarnodesetting
chmod 6750 /usr/sbin/oarnodesetting

# set OAR Shell
if [ "`getent passwd oar |cut -f7 -d:`" != "/usr/lib/oar/oarsh_shell" ]
then
  chsh -s /usr/lib/oar/oarsh_shell oar
fi

# Unlock the oar user
usermod -p"*" oar
usermod -U oar

# Warning in case of an SQL upgrade
if [ "$1" = configure ]
then
  if dpkg --compare-versions "$2" lt 2.3.3
  then
    echo
    echo "  WARNING! If you upgraded OAR from 2.3.2 or earlier, you have to upgrade"
    echo "  the database scheme (stop OAR before)!"
    echo "  Upgrade SQL scripts are available in the /usr/lib/oar/db_upgrade directory"
    echo
  fi
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


