set -e

. %%OARDIR%%/setup/shared/shared.sh

draw_gantt_setup() {

    install_conffile \
        %%EXAMPLEDIR%%/drawgantt.conf \
        %%OARCONFDIR%%/drawgantt.conf \
        0600 \
        %%WWWUSER%%
    
    if [ ! -e "%%OARHOMEDIR%%/drawgantt-files/js" ]; then
        ln -sf %%SHAREDIR%%/drawgantt-files/js %%OARHOMEDIR%%/drawgantt-files/js
    fi
    if [ ! -e "%%OARHOMEDIR%%/drawgantt-files/Icons" ]; then
        ln -sf %%SHAREDIR%%/drawgantt-files/Icons %%OARHOMEDIR%%/drawgantt-files/Icons
    fi
}
